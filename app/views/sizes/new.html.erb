<div class="container">
  <h1>Size Registration </h1>

  <%= simple_form_for [ @category, @size ] do |f| %>
        <div class="row">
        <div class="col-6">
            <%= f.input :size_name,
                        label: 'Size',
                        collection: ['Square 1-1', 'Rectangle 2-3', 'Rectangle 4-5' , 'Others' ]
                         %>
        </div>
      
        <div class="col-6">
            <%= f.input :photo,
                        label: 'Upload a photo',
                        as: :file %>
         </div>
        <div class="col-12">
            <%= f.input :description,
                        label: 'Description',
                        placeholder: '...' %>
         </div>

    <p><%= f.submit "Create Your Size ", class: "btn btn-primary" %></p>
  <% end %>
</div>